<!DOCTYPE HTML>
<head>
	<meta charset="utf-8" />
	<title>I'm quitting caffeine</title>	
	
	<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.0/jquery.min.js" type="text/javascript"></script>
	
</head>
<body>
	<header>
		<h1>I'm quitting caffeine!</h1>
	</header>
	
	<section>
		<header>
			<h1>Have a shot</h1>
		</header>
		
		<%= partial :have_a_shot, @sources %>		
	</section>
	
	<section>
		<header>
			<h1>Your latest shots</h1>
		</header>
		
		<%= partial :shots, @shots %>
	</section>
	
	<section>
		<header><h1>Stats</h1></header>
		
		<% if @stats[:last_shot] %>
		<p>You had your last <%= @stats[:source_to_track] || 'drink' %> <%= ago @user.last_shot.created_at %>.</p>
		<% else %>
		<p>You haven't had any <%= @stats[:source_to_track] %> yet.</p>
		<% end %>
		
		<dt>
			<dt>Caffeine consumed today</dt>
			<dd><%= @stats[:caffeine_for_today] %> mg</dd>
			
			<% if @stats[:source_to_track] %>
			<dt><%= "#{@stats[:source_to_track].capitalize}" %> units consumed today:</dt>
			<dd><%= @stats[:units_for_today] %></dd>
			<% end %>
		</dt>
	</section>
	
	<footer>
		<p>Logged in as <strong>@<%= @user.username %></strong> | <a href="/logout">Logout</a><br>
		<a href="<%= show_settings_url %>">Settings</a></p>	
	</footer>
	
</body>
</html>
